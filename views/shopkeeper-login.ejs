<%- include('partials/header') %>
<%- include('partials/navbar') %>

<%- include('partials/messages') %>


<div class="sign-in-view text-center">
  <form method="POST" action="/shopkeeper-login" class="form-signin">
        <img class="mb-4" src="https://seeklogo.com/images/P/Pikachu-logo-D0AAA93F17-seeklogo.com.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">SHOPKEEPER LOGIN</h1>
        <div class="form-group">
              <div class="form-group">
                <input
                  type="email"
                  class="form-control"
                  name="username"
                  placeholder="Email"
                />
              </div>
              <div class="form-group">
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Password"
                />
              </div>
              <button type="submit" class="btn btn-dark my-2 px-3"  >LOGIN</button>
        
            <pre class="m-2">Not a shopkeeper?<br> Register Here...</pre>
            <a href="/shopkeeper-register" class="btn btn-danger px-3 ">Register</a>
      </form>
    </div>

<%- include('partials/footer') %>
